<% if !signed_in? %>
<header> 
    <div class="well" id="welcome-banner">
      <p align="center">  Online collaboration platform to share ideas, find activity partners and build something great!
        <%= link_to "Sign up" , signup_path, class: "btn btn-primary", style: "float: right; margin-left:10px" %> 
        <%= link_to "Log in" , signin_path, class: "btn btn-primary", style: "float: right" %> 
      </p>
    </div>
</header>
  <% else %>
<header class="navbar navbar-inverse">
    <div class="navbar-inner">
    <div class="container">
    <nav>
      <ul class="nav pull-right" >
        <li> <%= link_to "Home", root_url %> </li>
        <li> <%= link_to "Users", users_path %> </li>
        <li id="fat-menu" class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Profile", current_user %> </li>
            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
            <li class="divider"></li>
            <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
          </ul>
        </li>
      </ul>
     </nav>
    </div>
   </div>
</header>
  <% end %>
    
